/* ================================================= */
/* GLOBAL RESET */
/* ================================================= */
* {
  box-sizing: border-box;
  margin: 0;
  padding: 0;
  scroll-behavior: smooth;
}

body {
  font-family: 'Poppins', sans-serif;
  background: #0a0a0a; /* deep black */
  color: #f0e6c2; /* soft gold text */
  overflow-x: hidden;
}
/* ================================================= */
/* ENVELOPE ENTRANCE - LUXURY REALISTIC */
/* ================================================= */
#envelope-wrapper {
  position: fixed;
  inset: 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  z-index: 200;
  background: rgba(0,0,0,0.85);
}

#envelope {
  position: relative;
  width: 220px;
  height: 140px;
  perspective: 1000px;
  cursor: pointer;
}

#envelope .body {
  width: 100%;
  height: 100%;
  background: linear-gradient(145deg, #fff8e1, #fbe26c);
  border: 2px solid #e6c200;
  border-radius: 10px;
  box-shadow: 0 10px 25px rgba(0,0,0,0.35);
  position: relative;
  z-index: 1;
}

#envelope .flap {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 50%;
  background: linear-gradient(145deg, #fff9d1, #ffd700);
  border-bottom: 2px solid #e6c200;
  border-radius: 10px 10px 0 0;
  transform-origin: top;
  transform: rotateX(0deg);
  z-index: 2;
  box-shadow: 0 6px 18px rgba(0,0,0,0.3);
  transition: transform 1s cubic-bezier(0.65, 0.05, 0.36, 1);
}

#open-envelope-btn {
  margin-top: 35px;
  padding: 14px 32px;
  border-radius: 30px;
  border: none;
  background: linear-gradient(90deg, #ffd700, #e6c200);
  color: #0a0a0a;
  font-weight: 600;
  display: flex;
  align-items: center;
  gap: 12px;
  cursor: pointer;
  font-size: 16px;
  box-shadow: 0 10px 28px rgba(255,215,0,0.45);
  transition: all 0.3s ease;
}

#open-envelope-btn:hover {
  transform: translateY(-3px) scale(1.05);
  background: linear-gradient(90deg, #e6c200, #ffd700);
}

/* Flap terbuka */
#envelope.open .flap {
  transform: rotateX(-180deg);
}




/* ================================================= */
/* BACKGROUND VIDEO & OVERLAY - FINAL VERSION */
/* ================================================= */
.video-container {
  position: fixed;       /* selalu menempel di layar */
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  overflow: hidden;      /* mencegah video keluar container */
  z-index: -3;           /* di belakang semua konten */
}

.bg-video {
  width: 100%;
  height: 100%;
  object-fit: cover;     /* menutupi seluruh container tanpa merusak rasio */
  object-position: center;
  display: block;
  opacity: 0.35;         /* transparansi agar teks terbaca */
  pointer-events: none;  /* video tidak bisa diklik */
}

.overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(
    180deg,
    rgba(0, 0, 0, 0.6),
    rgba(0, 0, 0, 0.95)
  );
  z-index: -2;           /* di atas video, di bawah konten */
  pointer-events: none;
}

/* RESPONSIVE ADJUSTMENT */
@media (max-width: 768px) {
  .bg-video {
    object-position: top center; /* supaya area penting terlihat di HP */
  }
  .overlay {
    background: linear-gradient(
      180deg,
      rgba(0, 0, 0, 0.5),
      rgba(0, 0, 0, 0.85)
    );
  }
}


/* ================================================= */
/* HEADER / NAVBAR */
/* ================================================= */
header {
  position: fixed;
  top: 0;
  width: 100%;
  padding: 18px 80px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  backdrop-filter: blur(14px);
  background: rgba(0,0,0,0.85);
  border-bottom: 1px solid rgba(255,215,0,0.2);
  z-index: 100;
}

.logo {
  font-size: 22px;
  font-weight: 700;
  letter-spacing: 1px;
  background: linear-gradient(90deg, #ffd700, #e6c200);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}

nav a {
  margin-left: 40px;
  color: #f0e6c2;
  text-decoration: none;
  font-weight: 500;
  position: relative;
  transition: 0.3s ease;
}

nav a:hover {
  background: linear-gradient(90deg, #ffd700, #e6c200);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}

nav a::after {
  content: "";
  position: absolute;
  bottom: -6px;
  left: 0;
  width: 0%;
  height: 2px;
  background: linear-gradient(90deg, #ffd700, #e6c200);
  transition: 0.3s ease;
}

nav a:hover::after {
  width: 100%;
}

/* ================================================= */
/* WRAPPER */
/* ================================================= */
#wrapper {
  height: 100vh;
  overflow-y: scroll;
  scroll-snap-type: y mandatory;
}

/* ================================================= */
/* SECTION BASE */
/* ================================================= */
.section {
  min-height: 100vh;
  max-width: 1300px;
  margin: 0 auto;
  padding: 100px 80px 80px 80px;
  scroll-snap-align: start;
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 70px;
}

/* ================================================= */
/* HERO SECTION */
/* ================================================= */
.hero {
  display: flex;
  align-items: center;
  justify-content: space-between;
  min-height: calc(100vh - 80px);
  gap: 60px;
}

.hero-text {
  flex: 1;
}

.hero-text h1 {
  font-size: 52px;
  font-weight: 700;
  margin-bottom: 10px;
  background: linear-gradient(90deg, #ffd700, #e6c200);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}

.hero-text h2 {
  font-size: 24px;
  font-weight: 400;
  color: #f0e6c2;
  margin-bottom: 25px;
}

.hero-text p {
  max-width: 550px;
  line-height: 1.7;
  color: #e6d799;
  margin-bottom: 30px;
}

.hero-img {
  max-width: 520px;
  width: 100%;
  height: auto;
  object-fit: contain;
  filter: brightness(1) contrast(1.05) saturate(1.05);
  mask-image: linear-gradient(to bottom, black 80%, transparent 100%);
  -webkit-mask-image: linear-gradient(to bottom, black 80%, transparent 100%);
}

/* ================================================= */
/* BUTTONS */
/* ================================================= */
.btn-primary {
  display: inline-block;
  padding: 12px 30px;
  background: linear-gradient(90deg, #ffd700, #e6c200);
  color: #0a0a0a;
  border-radius: 30px;
  text-decoration: none;
  font-weight: 600;
  transition: all 0.3s ease;
  box-shadow: 0 8px 25px rgba(255,215,0,0.4);
}

.btn-primary:hover {
  background: linear-gradient(90deg, #e6c200, #ffd700);
  transform: translateY(-3px) scale(1.05);
}

/* ================================================= */
/* CARDS BASE (PROJECTS / SKILLS / CONTACT) */
/* ================================================= */
.card, .skill-card, .contact-card, .project-card {
  background: linear-gradient(145deg, rgba(255,215,0,0.05), rgba(255,215,0,0.12));
  padding: 25px;
  border-radius: 20px;
  backdrop-filter: blur(15px);
  border: 1px solid rgba(255,215,0,0.2);
  transition: all 0.35s ease;
}

.card:hover, .skill-card:hover, .contact-card:hover, .project-card:hover {
  transform: translateY(-8px);
  box-shadow: 0 25px 50px rgba(255,215,0,0.35);
  border: 1px solid rgba(255,215,0,0.5);
}

.card h4, .skill-card h4, .contact-card h4, .project-card h3 {
  color: #ffd700;
  font-weight: 600;
}

.card p, .skill-card p, .contact-card p, .project-card p {
  color: #f0e6c2;
  line-height: 1.6;
}

.year {
  color: #e6c200;
  font-size: 13px;
  font-weight: 600;
  margin-bottom: 8px;
}

/* ================================================= */
/* SKILLS SECTION */
/* ================================================= */
.skills-section {
  display: flex;
  justify-content: center; /* center skill groups horizontally */
  padding: 60px 60px;
}

@media (max-width: 1024px) and (min-width: 768px).skills-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr); /* Core & Soft Skills berdampingan */
  gap: 80px; /* jarak antar group */
  justify-content: center; /* supaya tidak menempel ke tepi */
  margin-top: 40px;
}

.skill-group {
   display: flex;
  flex-direction: column;
  align-items: center; /* center cards inside group */
  gap: 30px; /* jarak antar skill-card di dalam group */
}

.skill-group h3 {
  font-size: 22px;
  margin-bottom: 30px;
  background: linear-gradient(90deg, #ffd700, #e6c200);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  text-align: center;
}

.skill-cards {
  display: flex;
  flex-direction: column;
  gap: 20px;
  width: 100%;
}

.skill-card {
  display: flex;
  flex-direction: column;
  gap: 10px;
  padding: 20px;
  border-radius: 18px;
  background: linear-gradient(145deg, rgba(255,215,0,0.05), rgba(255,215,0,0.12));
  backdrop-filter: blur(12px);
  border: 1px solid rgba(255,215,0,0.2);
  transition: all 0.3s ease;
}

.skill-card:hover {
  transform: translateY(-6px);
  box-shadow: 0 20px 40px rgba(255,215,0,0.25);
  border: 1px solid rgba(255,215,0,0.4);
}

.skill-card h4 {
  font-size: 16px;
  color: #ffd700;
  font-weight: 600;
}

.skill-card p {
  font-size: 14px;
  color: #f0e6c2;
  line-height: 1.5;
}

/* ================================================= */
/* BACKGROUND 3 COLUMN LAYOUT */
/* ================================================= */
.background-3col {
  display: grid;
  grid-template-columns: 1.2fr 0.9fr 1.2fr;
  gap: 80px;
  max-width: 1300px;
  margin: 0 auto;
  align-items: center;
  min-height: calc(100vh - 80px);
}

.background-left, .background-right {
  display: grid;
  gap: 25px;
}

.background-center img {
  max-width: 380px;
  width: 100%;
  height: auto;
  object-fit: contain;
}

/* ================================================= */
/* PROJECTS SECTION */
/* ================================================= */
#projects {
  position: relative;
}

.project-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
  gap: 40px;
  max-width: 1000px;
  margin: 60px auto 0 auto;
  margin-top: 60px;
}

.project-card {
  position: relative;
  padding: 35px 25px;
  border-radius: 24px;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  cursor: pointer;
  animation: slideIn 0.6s ease forwards;
}

.project-card::before {
  content: "";
  position: absolute;
  inset: 0;
  background: linear-gradient(120deg, rgba(255,215,0,0.15), transparent 50%);
  opacity: 0;
  transition: opacity 0.4s ease;
}

.project-card:hover::before { opacity: 1; }

.project-card .view-more {
  margin-top: 20px;
  font-size: 13px;
  color: #ffd700;
  font-weight: 500;
  opacity: 0.9;
  transition: 0.3s ease;
}

.project-card:hover .view-more {
  opacity: 1;
  letter-spacing: 1px;
}

/* ================================================= */
/* PROJECT NAV BUTTONS (Prev / Next) */
/* ================================================= */
.project-slider-wrapper {
  position: relative;
  width: 100%;
  display: flex;
  align-items: center;
}

.project-slider-wrapper .project-nav {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  z-index: 10;
  background: linear-gradient(90deg, #ffd700, #e6c200);
  border: none;
  padding: 15px 20px;
  border-radius: 50%;
  color: #0a0a0a;
  font-weight: 700;
  cursor: pointer;
  box-shadow: 0 8px 20px rgba(255,215,0,0.4);
  transition: all 0.3s ease;
}
@media (max-width: 1024px){
.project-slider-wrapper .project-nav.prev {
  left: -30px; /* tarik keluar dari container */
}
.project-slider-wrapper .project-nav.next {
  right: -30px; /* tarik keluar dari container */
}
}
.project-slider-wrapper .project-nav:hover {
  background: linear-gradient(90deg, #e6c200, #ffd700);
  transform: translateY(-50%) scale(1.1);
}


/* ================================================= */
/* CONTACT SECTION */
/* ================================================= */
.contact {
  display: flex;
  justify-content: center;
  align-items: center;
  text-align: center;
  padding: 40px 20px;
}

.contact-container {
  max-width: 900px;
  width: 100%;
}

.contact h2 {
  font-size: 38px;
  margin-bottom: 20px;
  background: linear-gradient(90deg, #ffd700, #e6c200);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}

.contact-subtitle {
  color: #f0e6c2;
  margin-bottom: 50px;
  font-size: 16px;
}

.contact-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  gap: 30px;
}

.contact-card {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 15px;
  padding: 25px;
  border-radius: 20px;
}

.contact-card i {
  font-size: 30px;
  color: #ffd700;
}

/* ================================================= */
/* FOOTER */
/* ================================================= */
footer {
  text-align: center;
  padding: 30px;
  font-size: 14px;
  color: #e6c200;
  background: rgba(0,0,0,0.9);
}

/* ================================================= */
/* RESPONSIVE */
/* ================================================= */
@media (max-width: 1024px) {
  header { padding: 18px 40px; }
  .section { 
    flex-direction: column;
    text-align: center;
    padding: 120px 40px 60px 40px; 
    gap: 40px;
  }
  nav a { margin-left: 20px; }
  .hero-img, .background-center img { width: 100%; max-width: 650px; }
  .skills-grid, .project-grid, .contact-grid { grid-template-columns: 1fr; gap: 40px; }
}












